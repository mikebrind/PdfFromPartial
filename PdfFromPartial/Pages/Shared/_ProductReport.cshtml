@model ProductReportModel
<!DOCTYPE html>
<html>
<head>
    <link href="@System.IO.Path.Combine(Model.WebRootPath,"css\\bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@System.IO.Path.Combine(Model.WebRootPath,"css\\pdf.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    @if (Model.Products.Any())
    {
        <h2>Reorder Report</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Per Unit</th>
                    <th>Stock</th>
                    <th>Discontinued?</th>
                    <th>Reorder?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products.OrderBy(p => p.ProductName))
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.QuantityPerUnit</td>
                        <td>@product.UnitsInStock</td>
                        <td class="align-center">@if (product.Discontinued)
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                </svg>
                            }
                        </td>
                        <td class="align-center">
                            @if (product.ReorderLevel < product.UnitsInStock)
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                  <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                </svg>
                            }</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>
</html>